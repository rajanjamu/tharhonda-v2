<div id="prod-show">
  <div class="row">
    <div class="col-sm-8">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active <%= @product.thumb2? ? "" : "nodisplay" %>"><%= cl_image_tag(@product.thumb1) %></li>
          <li data-target="#carousel-example-generic" data-slide-to="1" class="<%= @product.thumb2? ? "" : "nodisplay" %>"><%= cl_image_tag(@product.thumb2) %></li>
          <li data-target="#carousel-example-generic" data-slide-to="2" class="<%= @product.thumb3? ? "" : "nodisplay" %>"><%= cl_image_tag(@product.thumb3) %></li>
          <li data-target="#carousel-example-generic" data-slide-to="2" class="<%= @product.thumb4? ? "" : "nodisplay" %>"><%= cl_image_tag(@product.thumb4) %></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <%= cl_image_tag(@product.image1) %>
            <div class="carousel-caption">
            </div>
          </div>
          <% if @product.image2? %>
            <div class="item">
              <%= cl_image_tag(@product.image2) %>
              <div class="carousel-caption">
              </div>
            </div>
          <% end %>
          <% if @product.image3? %>
            <div class="item">
              <%= cl_image_tag(@product.image3) %>
              <div class="carousel-caption">
              </div>
            </div>
          <% end %>
          <% if @product.image4? %>
            <div class="item">
              <%= cl_image_tag(@product.image4) %>
              <div class="carousel-caption">
              </div>
            </div>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="product-container">
        <div class="product-description">
          <h2 class="product-name"><%= @product.name %></h2>
          <div class="product-color">
            <div class="box color-<%= @product.color1? ? @product.color1 : "none" %>"></div>
            <div class="box color-<%= @product.color2? ? @product.color2 : "none" %>"></div>
            <div class="box color-<%= @product.color3? ? @product.color3 : "none" %>"></div>
            <div class="box color-<%= @product.color4? ? @product.color4 : "none" %>"></div>
          </div>
          <div class="product-specs">
            <ul>
              <li><%= @product.category %></li>
              <li><%= @product.cylinder %> cc</li>
              <li><%= @product.engine %>-cooled</li>
            </ul>
          </div>
          <div class="product-links">
            <ul>

              <!-- Button trigger modal -->
              <li><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-list-alt"), "#myModal", data: {toggle: "modal"} %></li>

              <!-- Modal -->
              <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h4 class="modal-title" id="myModalLabel"><%= @product.name %> - Specification</h4>
                    </div>
                    <div class="modal-body">
                      <%= cl_image_tag(@product.thumb3) %>
                    </div>
                  </div>
                </div>
              </div>

              
              <li><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-download-alt") %></li>
            </ul>
          </div>
        </div>
        <%= link_to("Ask for Test Ride", "#" , class: "btn btn-primary") %>
      </div>
    </div>

  </div>
</div>