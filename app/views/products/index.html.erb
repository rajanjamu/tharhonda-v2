<div id="prod-index">

  <div class="row">
    <div class="col-sm-3 hidden-xs nopadding">

      <div class="panel">
        <h5 class="panel-heading">Category</h5>
        <div class="panel-body">
          <div class="checkbox">
            <label><input type="checkbox" value="">Scooter</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Motorcycle</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Dream Series</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Super Bikes</label>
          </div>
        </div>
      </div>

      <div class="panel">
        <h5 class="panel-heading">Cylinder</h5>
        <div class="panel-body">
          <div class="checkbox">
            <label><input type="checkbox" value="">100 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">110 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">125 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">150 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">160 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">250 cc</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">1000 cc and above</label>
          </div>
        </div>
      </div>

      <div class="panel">
        <h5 class="panel-heading">Engine Type</h5>
        <div class="panel-body">
          <div class="checkbox">
            <label><input type="checkbox" value="">Air-cooled, 4 stroke</label>
          </div>
          <div class="checkbox">
            <label><input type="checkbox" value="">Liquid-cooled, 4 stroke</label>
          </div>
        </div>
      </div>

    </div>

    <div class="col-sm-9 nopadding">
      <h3 class="page-title">
        Products
      </h3>



      <div class="container-fluid">
        <div class="row">
          <% @products.each do |product| %>
            <div class="col-md-3 col-sm-4 col-xs-6 nopadding">
              <div class="product-container">
                <%= link_to cl_image_tag(product.picture), product %>
                <div class="product-description">
                  <%= link_to content_tag(:h5, product.name, class: "product-name"), product %>
                  <div class="product-color">
                    <div class="box color-<%= product.color1? ? product.color1 : "none" %>"></div>
                    <div class="box color-<%= product.color2? ? product.color2 : "none" %>"></div>
                    <div class="box color-<%= product.color3? ? product.color3 : "none" %>"></div>
                    <div class="box color-<%= product.color4? ? product.color4 : "none" %>"></div>
                  </div>
                  <div class="product-specs">
                    <ul>
                      <li><%= product.category %></li>
                      <li><%= product.cylinder %> cc</li>
                      <li><%= product.engine %>-cooled</li>
                    </ul>
                  </div>
                </div>
                <%= link_to("Learn More", product , class: "btn btn-primary") %>
          
              </div>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>

</div>




